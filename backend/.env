# ======================
# DATABASE CONFIGURATION
# ======================
MONGO_URI=mongodb://127.0.0.1:27017/lms_database?retryWrites=true&w=majority
MONGO_TEST_URI=mongodb://127.0.0.1:27017/lms_database_test
MONGO_DEBUG=true

# ==================
# AUTH CONFIGURATION
# ==================
JWT_SECRET=your_very_strong_secret_here_32+_characters
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7
SESSION_SECRET=another_strong_secret_here
SESSION_MAX_AGE=86400000 # 1 day in ms

# ==================
# SERVER CONFIGURATION
# ==================
PORT=5000
NODE_ENV=development
HOST=0.0.0.0
TRUST_PROXY=1 # For production behind reverse proxy

# ==================
# RATE LIMITING
# ==================
AUTH_RATE_LIMIT_WINDOW=15 # minutes
AUTH_RATE_LIMIT_MAX=10 # attempts per window
API_RATE_LIMIT_MAX=100 # general API requests

# ==================
# CLIENT SETTINGS
# ==================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================
# EMAIL SERVICE
# ==================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false # true for 465, false for other ports
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=LMS System

# ==================
# SECURITY
# ==================
CSRF_PROTECTION=true
HELMET_PROTECTION=true
CONTENT_SECURITY_POLICY=true

# ==================
# DEBUGGING
# ==================
JWT_DEBUG=false
REQUEST_LOGGING=true